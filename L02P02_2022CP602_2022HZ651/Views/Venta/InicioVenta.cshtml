@model L02P02_2022CP602_2022HZ651.Models.Cliente

@{
    ViewData["Title"] = "Venta de Libros";
}

<div class="container mt-5">
    <div class="text-center">
        <img src="~/img/logo.png" alt="Logo" class="mb-3" width="100">
        <h1 class="text-white bg-dark p-3">Venta de Libros</h1>
    </div>

    <div class="card p-4 mt-3">
        <h3 class="mb-3">Proceso de venta</h3>
        <h5 class="mb-3">Datos del Cliente</h5>

        <form asp-action="IniciarVenta" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="Nombre">Nombre</label>
                    <input type="text" asp-for="Nombre" class="form-control" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="Apellido">Apellido</label>
                    <input type="text" asp-for="Apellido" class="form-control" required>
                </div>
            </div>

            <div class="mb-3">
                <label for="Email">Email</label>
                <input type="email" asp-for="Email" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="Direccion">Dirección</label>
                <input type="text" asp-for="Direccion" class="form-control">
            </div>

            <button type="submit" class="btn btn-success w-100">Iniciar Venta</button>
        </form>
    </div>
</div>

<footer class="bg-dark text-white text-center p-3 mt-4">
