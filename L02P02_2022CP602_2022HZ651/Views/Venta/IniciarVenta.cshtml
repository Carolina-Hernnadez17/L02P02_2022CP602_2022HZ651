@model L02P02_2022CP602_2022HZ651.Models.Clientes

@{
    ViewData["Title"] = "Iniciar Venta";
}

<div class="container mt-5">
    <h2 class="text-center text-white bg-dark p-3">Inicio de Venta</h2>

    <div class="card p-4">
        <form asp-action="IniciarVenta" asp-controller="Venta" method="post">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" class="form-control" asp-for="Nombre" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Apellido</label>
                <input type="text" class="form-control" asp-for="Apellido" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" asp-for="Email" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Dirección</label>
                <input type="text" class="form-control" asp-for="Direccion" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Iniciar Venta</button>
        </form>
    </div>
</div>


