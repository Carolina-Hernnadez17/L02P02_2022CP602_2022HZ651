@model L02P02_2022CP602_2022HZ651.Models.Clientes

@{
    ViewData["Title"] = "Venta de Libros";
}

<div class="container mt-5">
    <div class="text-center">
        <img src="~/img/logo.png" alt="Logo" class="mb-3" width="100">
        <h1 class="text-white bg-dark p-3">Venta de Libros</h1>
    </div>

    @* Si hay un mensaje en TempData, se muestra aquí *@
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">
            @TempData["Mensaje"]
        </div>
    }

    <div class="card p-4 mt-3">
        <h3 class="mb-3">Proceso de venta</h3>
        <h5 class="mb-3">Datos del Cliente</h5>

        <form asp-action="IniciarVenta" asp-controller="Venta" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" required>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Apellido" class="form-label">Apellido</label>
                    <input asp-for="Apellido" class="form-control" required>
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Direccion" class="form-label">Dirección</label>
                <input asp-for="Direccion" class="form-control">
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Iniciar Venta</button>
        </form>
    </div>
</div>

<footer class="bg-dark text-white text-center p-3 mt-4">
    2025-01-04 - REBECA MARGARITA CRUZ POLANCO<br>
    2025-01-04 - MIRIAN CAROLINA HERNANDEZ ZEPEDA
</footer>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
