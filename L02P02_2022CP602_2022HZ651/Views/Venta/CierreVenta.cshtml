@model L02P02_2022CP602_2022HZ651.Models.PedidoEncabezado

@{
    ViewData["Title"] = "Cierre de Venta";
}

<div class="container mt-5">
    <h1 class="text-white bg-dark p-3 text-center">Cierre de Venta</h1>

    <div class="card p-4">
        <h3 class="mb-3">Datos del Cliente</h3>
        <p><strong>Nombre:</strong> @Model.Cliente.Nombre @Model.Cliente.Apellido</p>
        <p><strong>Email:</strong> @Model.Cliente.Email</p>
        <p><strong>Dirección:</strong> @Model.Cliente.Direccion</p>

        <h3 class="mt-4">Detalle del Pedido</h3>
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Libro</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detalle in Model.Detalles)
                {
                    <tr>
                        <td>@detalle.Libro.Nombre</td>
                        <td>@detalle.Cantidad</td>
                        <td>@detalle.Libro.Precio.ToString("C")</td>
                        <td>@((detalle.Cantidad * detalle.Libro.Precio).ToString("C"))</td>
                    </tr>
                }
            </tbody>
        </table>

        <h4 class="mt-3 text-end"><strong>Total a Pagar: </strong> @Model.Total.ToString("C")</h4>

        <form asp-action="CerrarVenta" asp-controller="Venta" method="post">
            <input type="hidden" name="idPedido" value="@Model.Id">
            <button type="submit" class="btn btn-danger w-100">Cerrar Venta</button>
        </form>
    </div>
</div>
